<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Classement">

    <TextView
        android:id="@+id/titreClassement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Classement de la partie"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ajouterScore"
        android:layout_width="138dp"
        android:layout_height="72dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="40dp"
        android:text="Ajouter les scores"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listeJoueur" />

    <Button
        android:id="@+id/quitterClassement"
        android:layout_width="138dp"
        android:layout_height="72dp"
        android:layout_marginTop="40dp"
        android:text="Quitter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toEndOf="@+id/ajouterScore"
        app:layout_constraintTop_toBottomOf="@+id/listeJoueur" />

    <LinearLayout
        android:id="@+id/listeJoueur"
        android:layout_width="347dp"
        android:layout_height="472dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titreClassement"></LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>